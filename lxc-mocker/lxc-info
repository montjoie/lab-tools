# Mocks lxc-info command which is used by LAVA.

while getopts "s:i:n:" opt; do
    case $opt in
        n)
            LXC_NAME="$OPTARG"
            ;;
        s)
            STATUS=1
            ;;
        i)
            IP=1
            ;;
        *)
            ;;
    esac
done

if [ -z "$LXC_NAME" ];then
	echo "ERROR: no name"
	exit 1
fi

if [ ! -e /var/lib/lxc/$LXC_NAME ];then
	echo "$LXC_NAME doesn't exist"
	exit 1
fi

if [ "$STATUS" ]; then
    # echo running state.
    echo "'$LXC_NAME' state is RUNNING"
    exit 0
fi

if [ "$IP" ]; then
    # echo a dummy ip.
    echo "'$LXC_NAME' IP address is: '0.0.0.0'"
    exit 0
fi

